{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Barefoot Nomad ",
    "description": "Barefoot Nomad  Project Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "barefoot Nomad company",
      "description": "API for barefoot-Nomad system"
    }
  ],
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/api/user": {
      "get": {
        "tags": ["user router"],
        "description": "Get user information ",
        "parameters": [
          {
            "name": "userId",
            "in": "body",
            "required": true,
            "schema": {
              "userId": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Display user information",
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      },

      "post": {
        "tags": ["user router"],
        "description": "Create new user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        ],

        "responses": {
          "201": {
            "description": "User created ",
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      },
      "put": {
        "tags": ["user router"],
        "description": "Update specific user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        ],

        "responses": {
          "202": {
            "description": "User updated successfully",
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "tags": ["user router"],
        "description": "user login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login successfully",
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      }
    },
    "/api/v1/user/signup": {
      "post": {
        "tags": ["user router"],
        "description": "user signuo",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Signer Up successfully",
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "User": {
        "properties": {
          "username": {
            "type": "string",
            "example": "Warrior"
          },
          "email": {
            "type": "string",
            "example":"strikers668@gmail.vom"
          },
          "password": {
            "type": "string",
            "example":"kaka"
          },
          "role": {
            "type": "string",
            "example":"user"
          },
          "fullname": {
            "type": "string",
            "example":"Gorba Koks"
          }
        },
        "required": ["username", "email", "password"]
      }
    }
  }
}
